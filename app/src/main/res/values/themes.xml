<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.BookLibrary" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary цвета -->
        <item name="colorPrimary">@color/ocean_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/paper_lightblue</item>
        <!-- Surface цвета -->
        <item name="colorSurface">@color/paper_white</item>
        <item name="colorOnSurface">@color/ink_dark</item>
        <item name="colorSurfaceVariant">@color/dividers_light</item>
        <!-- Текст -->
        <item name="android:textColorPrimary">@color/ink_dark</item>
        <item name="android:textColorSecondary">@color/ink_medium</item>

        <!-- Системные поля -->
        <item name="android:statusBarColor">@color/paper_lightblue</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/paper_lightblue</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Клавиатура не перекрывает контент -->
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
</resources>

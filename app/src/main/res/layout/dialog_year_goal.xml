<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/paper_white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цель для прочтения"
        android:textColor="@color/ink_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Сколько книг хотите прочитать?"
        android:textColor="@color/ink_medium"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/editGoal"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_goal_edittext"
        android:gravity="center"
        android:hint="Введите число"
        android:inputType="number"
        android:maxLength="3"
        android:textColor="@color/ink_dark"
        android:textSize="18sp" />

</LinearLayout>
